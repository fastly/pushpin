[proxy]
# mongrel2 to connect to for PULLing HTTP requests
m2_in_spec=tcp://127.0.0.1:9999

# mongrel2 to connect to for PUBing HTTP responses
m2_out_spec=tcp://127.0.0.1:9998

# yurl to connect to for PUSHing HTTP requests
yurl_out_spec=tcp://127.0.0.1:5550

# yurl to connect to for SUBing HTTP responses
yurl_in_spec=tcp://127.0.0.1:5551

# bind for REQing inspection info (internal, used with handler)
handler_inspect_spec=ipc:///tmp/pushpin-inspect

# bind for PULLing HTTP requests (internal, used with handler)
handler_retry_in_spec=ipc:///tmp/pushpin-retry

# bind for PUSHing HTTP requests (internal, used with handler)
handler_accept_out_spec=ipc:///tmp/pushpin-accept


[handler]
# connect for REPing inspection info (internal, used with proxy)
proxy_inspect_spec=ipc:///tmp/pushpin-inspect

# connect for PUSHing HTTP requests (internal, used with proxy)
proxy_retry_out_spec=ipc:///tmp/pushpin-retry

# connect for PULLing HTTP requests (internal, used with proxy)
proxy_accept_in_spec=ipc:///tmp/pushpin-accept

# redis server to use for storing state
redis_host=127.0.0.1
redis_port=6379

# bind for PULLing publish requests
push_in_spec=tcp://*:5560
